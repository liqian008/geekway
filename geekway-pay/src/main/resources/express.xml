<?xml version="1.0" encoding="UTF-8"?>

<!-- 邮费模板的配置信息 -->

<delivery_templates>
	<delivery_template>
		<!-- 模板id -->
		<id>1</id>
		<!-- 模板名称 -->
		<Name>买家承担运费模板</Name>
		<!-- 支付方式(0-买家承担运费, 1-卖家承担运费) -->
		<Assumer>0</Assumer>
		<!-- 计费单位(0-按件计费, 1-按重量计费, 2-按体积计费，目前只支持按件计费，默认为0) -->
		<Valuation>0</Valuation>
		<!-- 具体运费计算 -->
		<TopFee>
			<!-- 快递类型ID(字典表) <Type>10000029</Type> -->

			<!-- StartStandards, 起始计费数量(比如计费单位是按件, 填2代表起始计费为2件) -->
			<!-- StartFees，起始计费金额(单位: 分） -->
			<!-- AddStandards，递增计费数量 -->
			<!-- AddFees，递增计费金额(单位: 分) -->
			<!-- 例子解析：Type为10000027的默认邮费计算，第1件邮费2分，每增加3件邮费增加3分。Type为10000027的指定地区邮费计算，寄送到中国/广东省/广州市的商品，第一件邮费1元，每增加1件邮费增加3分。 -->

			<!-- 默认的邮费计算方法 -->
			<Normal StartStandards="1" StartFees="600" AddStandards="4"
				AddFees="200" DestCode=""/>
			<!-- 特殊的邮费计算方法(指定地区) -->
			<Custom>
				<!-- DestCountry, 郭嘉(扣血拿排) -->
				<!-- DestProvince，省 -->
				<!-- DestCity，市 -->
				<!-- DestCode，代码（选填） -->
				
				<!-- 北京市内 -->
				<Item StartStandards="" StartFees="" AddStandards="" AddFees=""
					DestCountry="" DestProvince="" DestCity="" DestCode=""/>
				<!-- 江浙沪地区 -->
				<Item StartStandards="" StartFees="" AddStandards="" AddFees=""
					DestCountry="" DestProvince="" DestCity=""  DestCode=""/>
				<Item StartStandards="" StartFees="" AddStandards="" AddFees=""
					DestCountry="" DestProvince="" DestCity=""  DestCode=""/>
			</Custom>
		</TopFee>
	</delivery_template>
</delivery_templates>