<%!String displayCommandType(short commandType){
	if(1==commandType){
		return "文本请求事件";
	}else if(2==commandType){
		return "按钮点击事件";
	}else if(3==commandType){
		return "新用户关注事件";
	}
	return "类型错误";
} %>

